<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaPrestamoEquipos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #f0f4f8; /* Color de fondo claro */
            padding: 20px 0;
            position: fixed;
            height: 100%;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar h4 {
                font-weight: bold;
                color: #0056b3; /* Azul para diferenciar */
            }

            .sidebar .nav-link {
                color: #0056b3;
                font-weight: 500;
                padding: 10px 15px;
            }

                .sidebar .nav-link:hover {
                    background-color: #e7f1ff;
                    border-radius: 5px;
                }

            .sidebar .nav-item i {
                margin-right: 10px;
            }

        .header {
            width: calc(100% - 250px);
            position: fixed;
            top: 0;
            left: 250px;
            background-color: #0056b3; /* Azul para el header */
            color: white;
            padding: 10px 20px;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 60px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .header h2 {
                font-size: 20px;
                margin: 0;
            }

        .header-buttons a {
            color: white;
            font-size: 18px;
            margin-left: 15px;
        }

        .content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
            flex: 1;
        }

        footer {
            background-color: #f0f4f8;
            text-align: center;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">Menú Estudiante</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Principal
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Perfil" asp-action="Index">
                    <i class="fas fa-user"></i> Perfil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Prestamo" asp-action="Index">
                    <i class="fas fa-calendar-plus"></i> Reservar
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Prestamo" asp-action="HistorialPrestamos">
                    <i class="fas fa-clock"></i> Historial de Préstamos
                </a>
            </li>
            <li class="nav-item">
                <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-link btn btn-link">
                        <i class="fas fa-sign-out-alt"></i> Salir
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <div class="header">
        <h2>Panel de Estudiante</h2>
        <div class="header-buttons">
            <a href="#" title="Notificaciones"><i class="fas fa-bell"></i></a>
            <a href="#" title="Perfil"><i class="fas fa-user-circle"></i></a>
        </div>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Aquí se renderiza el contenido de las vistas -->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SistemaPrestamoEquipos
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
