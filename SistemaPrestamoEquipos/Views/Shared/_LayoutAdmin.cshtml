<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaPrestamoEquipos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #f0f4f8; /* Azul oscuro */
            padding: 20px 0;
            position: fixed;
            height: 100%;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar h4 {
                font-weight: bold;
                text-align: center;
                margin-bottom: 1.5rem;
                color: #0056b3;
            }

            .sidebar .nav-link {
                color: #0056b3;
                padding: 10px 20px;
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 1rem;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #457b9d;
                    color: white;
                    border-radius: 5px;
                }

                .sidebar .nav-link .icon {
                    font-size: 1.2rem;
                }

            .sidebar .nav-item i {
                margin-right: 10px;
            }

        .header {
            width: calc(100% - 250px);
            background-color: #457b9d; /* Azul más claro */
            color: white;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 250px;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 60px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .header h2 {
                margin: 0;
                font-size: 1.5rem;
            }

        .header-buttons a {
            color: white;
            margin-left: 20px;
            font-size: 1.2rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .header-buttons a:hover {
                color: #f1faee;
            }

        .content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
            flex: 1;
            background-color: #f8f9fa;
        }

        footer {
            background-color: #1d3557;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Menú Admin</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home">
                    <i class="fas fa-home"></i> Principal
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Perfil">
                    <i class="fas fa-user"></i> Perfil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-chart-bar"></i> Reportes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                    <i class="fas fa-users-cog"></i> Gestión de Usuarios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inventario" asp-action="Index">
                    <i class="fas fa-boxes"></i> Inventario
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-clock"></i> Historial
                </a>
            </li>
            <li class="nav-item">
                <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-link btn btn-link text-start">
                        <i class="fas fa-sign-out-alt"></i> Salir
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <div class="header">
        <h2>Panel de Administrador</h2>
        <div class="header-buttons">
            <a href="#" title="Notificaciones"><i class="fas fa-bell"></a>
            <a href="#" title="Perfil"><i class="fas fa-user-circle"></i></a>
        </div>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; 2024 - SistemaPrestamoEquipos
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
