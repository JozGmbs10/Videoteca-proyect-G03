@{
    Layout = null;
    ViewData["Title"] = "Sistema de Reserva de Computadoras";
    var errorMessage = ViewData["ErrorMessage"] as string;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="icon" href="~/pc.ico" type="image/x-icon">
    <style>
        body {
            margin: 0;
            height: 100vh;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            display: flex;
            width: 900px;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .blue-section {
            background-color: #3498db;
            color: white;
            padding: 40px;
            width: 50%;
        }

        .blue-section h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .blue-section p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .form-section {
            width: 50%;
            padding: 40px;
        }

        .form-title {
            color: #2c3e50;
            margin-bottom: 30px;
            font-size: 2rem;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-control {
            border: 1px solid #e0e0e0;
            padding: 12px;
            height: auto;
        }

        .form-floating > label {
            padding: 12px;
        }

        .btn-login {
            background-color: #3498db;
            border: none;
            padding: 12px;
            width: 100%;
            font-size: 1.1rem;
            margin-top: 20px;
        }

        .btn-login:hover {
            background-color: #2980b9;
        }

        .password-note {
            color: #666;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        .input-icon {
            position: relative;
        }

        .input-icon i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .input-icon input {
            padding-left: 40px;
        }

        .alert {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1050;
            width: 300px;
            display: none;
        }

       
        }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert" id="error-message">
            @errorMessage
        </div>
    }

    <div class="login-card">
        <div class="blue-section">
            <h1 class="mb-4">Sistema de Reserva de Computadoras</h1>
            <p>Bienvenido a nuestro innovador sistema de reserva de computadoras para la FISI.
                Accede a tu cuenta para gestionar tus reservas de forma rápida y sencilla.</p>
        </div>

        <div class="form-section">
            <h2 class="form-title text-center mb-4">Iniciar Sesión</h2>
            <form method="post" asp-page-handler="Login">
                <div class="input-icon mb-3">
                    <i class="fas fa-envelope"></i>
                    <input type="text" class="form-control" id="username" name="username" 
                           placeholder="nombre@unmsm.com" required />
                </div>

                <div class="input-icon mb-3">
                    <i class="fas fa-lock"></i>
                    <input type="password" class="form-control" id="password" name="password" 
                           placeholder="Contraseña" required />
                </div>

                <p class="password-note">No compartas tu contraseña con nadie.</p>

                <button type="submit" class="btn btn-primary btn-login">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Iniciar Sesión
                </button>
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Mensaje"]
                    </div>
                }
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var errorMessage = $("#error-message");
            if (errorMessage.length) {
                errorMessage.show();
                setTimeout(function () {
                    errorMessage.fadeOut();
                }, 3000);
            }
        });
    </script>
</body>
</html>